{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class='main'>
  {{#with data}}
    <div class='main__content'>
      <h1 class='title title--center'>{{name}}</h1>

      <form
        method='post'
        action='/spotify-search'
        class='search'
      >
        <img src='svg/spotify-search.svg' />
        <input
          type='search'
          class='search__input'
          placeholder='Write requst'
          name='value'
          value='{{value}}'
        />
        <button class='search__button'>Search</button>
      </form>

      <ul class='playlist__list'>
        {{#each list}}
          <li class='playlist'>
            <img src='{{image}}' />
            <div class='playlist__content'>
              <strong
                class='playlist__name'
              >{{name}}</strong>
              <span class='playlist__amount'>Amount songs:
                {{amount}}</span>
            </div>
          </li>
        {{/each}}
      </ul>

    </div>
  {{/with}}
</main>
