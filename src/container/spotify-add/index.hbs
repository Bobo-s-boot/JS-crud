{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class='main'>
  {{#with data}}
    <div class='main__content'>
      <h1 class='title title--center'>Add to playlist
        {{playlistId}}</h1>

      <ul class='track-list'>
        {{#each tracks}}
          <li class='track'>
            <img src='{{image}}' />
            <div class='track__content'>
              <strong class='track__name'>{{name}}</strong>
              <em class='track__author'>{{author}}</em>
            </div>
            <a
              href='/spotify-track-add?playlistId={{../playlistId}}&trackId={{id}}'
            >
              <img
                src='/svg/oval_button-add.svg'
                class='svg__add'
              />
            </a>
          </li>
        {{/each}}
      </ul>

    </div>
  {{/with}}
</main>
