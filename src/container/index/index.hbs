 }}

<main>
  <section>
    <div class='form'>
      <h1 class='form__title'>Створити користувача</h1>
      <form method='POST' action='/user-create'>
        <div class='form__content'>
          <div class='form__field'>
            <label for='email' class='form__label'>Email
              adress</label>
            <input
              type='email'
              name='email'
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label
              for='login'
              class='form__label'
            >Нікнейм</label>
            <input
              type='login'
              name='login'
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label
              for='password'
              class='form__label'
            >Пароль</label>
            <input
              type='password'
              name='password'
              class='form__input'
            />
          </div>
          <button class='form__button'>Створити</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class='form'>
      <h1 class='form__title'>Список користувачів</h1>
      <div class='user-list'>
        {{#with data.users}}
          {{#if isEmpty}}
            <mark>Пустий</mark>
          {{else}}
            <ul>
              {{#each list}}
                <li>{{email}}
                  |
                  {{login}}|
                  {{id}}<a
                    href='/user-delete?id={{id}}'
                  >(видалити)</a></li>
              {{/each}}
            </ul>
          {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

  <section>
    <div class='form'>
      <h1 class='form__title'>Оновити пошту користувача</h1>
      <form method='POST' action='/user-update'>
        <div class='form__content'>
          <div class='form__field'>
            <label for='id' class='form__label'>ID</label>
            <input
              type='id'
              name='id'
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label for='login' class='form__label'>Нова
              email адреса</label>
            <input
              type='email'
              name='email'
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label
              for='password'
              class='form__label'
            >Пароль</label>
            <input
              type='password'
              name='password'
              class='form__input'
            />
          </div>
          <button class='form__button'>Створити</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class='form'>
      <h1 class='form__title'>Інформація про товар</h1>
      <form method='POST' action='/user-update'>
        <div class='form__content'>
          <div class='price-name'>
            <div class='nameProduct'>
              <label
                for='productName'
                class='form__label'
              >Назва товару</label>
              <input
                type='productName'
                name='productName'
                class='form__inputProduct'
              />
            </div>

            <div class='Price'>
              <label
                for='price'
                class='form__label'
              >Ціна</label>
              <input
                type='price'
                name='price'
                class='form__inputProduct'
              />
            </div>
          </div>

          <div class='form__field'>
            <label
              for='password'
              class='form__label'
            >Короткий опис товару</label>
            <input
              type='description'
              name='description'
              class='form__input'
            />
            <label
              for='text'
              class='form__lableLittle'
            >Відображається у картці товару</label>
          </div>
          <button class='form__buttonProduct'>Створити товар</button>
        </div>
      </form>
    </div>
  </section>
</main>

